@model kinka.Data.User
<!doctype html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
<meta http-equiv="X-UA-Compatible" content="ie=edge">
<link rel="stylesheet" href="css/Register.css"/>
<title>Register</title>
</head>
<body>
<div class="register-container">
    <form method="post" action="/register/control" class="register-form" >
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" max="30" required name="name" />
        <label asp-for="Surname"></label>
        <input asp-for="Surname" type="text" max="30" required name="surname" />
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" max="50" required name="email" />
        <label asp-for="UserName"></label>
        <input asp-for="UserName" type="text" required name="username" />
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" required name="password" />
        <button type="submit" >register</button>
    </form>
</div>
</body>
</html>